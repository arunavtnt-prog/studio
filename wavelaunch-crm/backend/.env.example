# Server Configuration
NODE_ENV=development
PORT=5000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=wavelaunch_crm
DB_USER=postgres
DB_PASSWORD=your_password_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here_change_in_production
JWT_EXPIRES_IN=7d

# OpenAI Configuration (for LLM features)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_MAX_TOKENS=2000

# Gmail API Configuration
GMAIL_CLIENT_ID=your_gmail_client_id
GMAIL_CLIENT_SECRET=your_gmail_client_secret
GMAIL_REDIRECT_URI=http://localhost:5000/api/v1/email/oauth/callback
GMAIL_REFRESH_TOKEN=your_refresh_token_after_oauth

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Email Configuration (for sending emails)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@wavelaunchstudio.com
SMTP_PASS=your_app_specific_password

# Health Score Configuration
HEALTH_SCORE_EMAIL_WEIGHT=0.25
HEALTH_SCORE_MILESTONE_WEIGHT=0.30
HEALTH_SCORE_ACTIVITY_WEIGHT=0.25
HEALTH_SCORE_PROGRESS_WEIGHT=0.20

# Automation Configuration
AUTO_GENERATE_ONBOARDING_KIT=true
EMAIL_SYNC_INTERVAL_MINUTES=30
HEALTH_SCORE_UPDATE_INTERVAL_MINUTES=60
